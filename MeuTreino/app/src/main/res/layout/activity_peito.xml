<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/supinoRetoView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/supino_reto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/supinoRetoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/supino_reto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supinoRetoView" />

    <ImageView
        android:id="@+id/supinoInclinadoView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/supino_inclinado"

        app:layout_constraintTop_toBottomOf="@+id/supinoRetoText">
    </ImageView>

    <TextView
        android:id="@+id/supinoInclinadoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/supino_inclinado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supinoInclinadoView" />

</androidx.constraintlayout.widget.ConstraintLayout>
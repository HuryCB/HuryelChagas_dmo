<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAB3DF"
    android:orientation="vertical"

    android:padding="8dp"


    tools:context=".MainActivity">

    <Button

        android:id="@+id/button_resetar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"

        android:text="RESETAR" />

    <EditText
        android:id="@+id/text_saida"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:hint="Dinheiro do cartÃ£o"
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="#858484" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_m"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#FFC107"
            android:text="M" />

        <Button
            android:id="@+id/button_k"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#00BCD4"
            android:text="K" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/white"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:text="+" />
        <EditText
            android:id="@+id/text_jogador1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/gray"
            android:hint="jogador" />
        <EditText
            android:id="@+id/text_jogador2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:inputType="number"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:hint="jogador" />
        <TextView

            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:backgroundTint="@color/gray"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_c"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#FF2222"
            android:text="C" />

        <Button
            android:id="@+id/button_ponto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="@color/gray"
            android:text="." />
    </LinearLayout>
    <TextView
        android:id="@+id/view_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
